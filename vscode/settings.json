{
  "bracketPairColorizer.showBracketsInGutter": true,
  "cSpell.language": "en",
  "editor.fontFamily": "DejaVuSansMono Nerd Font",
  "editor.fontSize": 14,
  "terminal.integrated.fontSize": 14,
  "editor.renderWhitespace": "all",
  "editor.scrollBeyondLastLine": false,
  "editor.tabSize": 2,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript ": "javascriptreact"
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "search.location": "panel",
  "window.zoomLevel": 0,
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Night Owl (No Italics)",
  "workbench.editor.enablePreview": true,
  "workbench.panel.defaultLocation": "right",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.feedback.visible": false,
  "editor.suggestSelection": "first",
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": true,
  "terminal.integrated.fontFamily": "DejaVuSansMono Nerd Font",
  "workbench.fontAliasing": "auto",
  "editor.snippetSuggestions": "top",
  "diffEditor.ignoreTrimWhitespace": false,
  "macros": {
    "collapseAndClose": [
      "workbench.files.action.collapseExplorerFolders",
      "workbench.action.closeAllEditors",
    ]
  },
  "gitlens.views.repositories.location": "scm",
  "gitlens.views.fileHistory.location": "explorer",
  "gitlens.views.lineHistory.location": "explorer",
  "gitlens.views.compare.location": "gitlens",
  "gitlens.views.search.location": "gitlens",
  "gitlens.heatmap.toggleMode": "window",
  "gitlens.recentChanges.toggleMode": "window",
  "highlight-matching-tag.styles": {
    "opening": {
      "left": {
        "custom": {
          "borderWidth": "0 0 0 1px",
          "borderStyle": "dotted",
          "borderColor": "white",
          "borderRadius": "5px",
          "overviewRulerColor": "white"
        }
      },
      "right": {
        "custom": {
          "borderWidth": "0 1px 0 0",
          "borderStyle": "dotted",
          "borderColor": "white",
          "borderRadius": "5px",
          "overviewRulerColor": "white"
        }
      }
    }
  },
  // ************ formatting ************
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  // ************ JavaScript ************
  "[javascript]": {
    "editor.formatOnSave": true // True for prettier.
  },
  "npm.enableScriptExplorer": true,
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  "prettier.eslintIntegration": true,
}
