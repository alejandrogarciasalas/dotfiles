{
  "bracketPairColorizer.showBracketsInGutter": true,
  "cSpell.language": "en",
  "editor.fontFamily": "DejaVuSansMono Nerd Font",
  "editor.fontSize": 12,
  "terminal.integrated.fontSize": 12,
  "editor.renderWhitespace": "all",
  "editor.scrollBeyondLastLine": false,
  "editor.tabSize": 2,
  // "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript ": "javascriptreact"
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "workbench.activityBar.visible": true,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.panel.defaultLocation": "right",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.feedback.visible": false,
  "editor.suggestSelection": "first",
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": true,
  "terminal.integrated.fontFamily": "DejaVuSansMono Nerd Font",
  "workbench.fontAliasing": "auto",
  "editor.snippetSuggestions": "top",
  "diffEditor.ignoreTrimWhitespace": false,
  "macros": {
    "collapseAndClose": [
      "workbench.files.action.collapseExplorerFolders",
      "workbench.action.closeAllEditors"
    ]
  },
  "git.autofetch": true,
  "gitlens.views.repositories.location": "scm",
  "gitlens.views.fileHistory.location": "explorer",
  "gitlens.views.lineHistory.location": "explorer",
  "gitlens.views.compare.location": "gitlens",
  "gitlens.views.search.location": "gitlens",
  "gitlens.heatmap.toggleMode": "window",
  "gitlens.recentChanges.toggleMode": "window",
  "highlight-matching-tag.styles": {
    "opening": {
      "left": {
        "custom": {
          "borderWidth": "0 0 0 1px",
          "borderStyle": "dotted",
          "borderColor": "white",
          "borderRadius": "5px",
          "overviewRulerColor": "white"
        }
      },
      "right": {
        "custom": {
          "borderWidth": "0 1px 0 0",
          "borderStyle": "dotted",
          "borderColor": "white",
          "borderRadius": "5px",
          "overviewRulerColor": "white"
        }
      }
    }
  },
  // spelling
  "cSpell.userWords": ["doublevalue"],
  "cSpell.enabled": false,
  // ************ formatting ************
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  // ************ JavaScript ************
  "eslint.alwaysShowStatus": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true,
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "[javascript]": {
    "editor.formatOnSave": true, // might be redundant
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoClosingBrackets": true
  },
  "[javascriptreact]": {
    // "editor.formatOnSave": true, // might be redundant
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoClosingBrackets": true
  },
  "[typescript]": {
    // "editor.formatOnSave": true, // might be redundant
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.accessibilitySupport": "off",

  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "search.excludeFolders": {
    "**/__generated__/**": true,
  },
  "workbench.colorTheme": "Dracula",
}
