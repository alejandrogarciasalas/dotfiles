[core]
	editor = vim
	whitespace = tab-in-indent # I prefer spaces over tabs so this will highlight any tab indents
	precomposeunicode = true
	excludesfile = ~/.dotfiles/git/.gitignore_global
	untrackedCache = true
[user]
	name = Alejandro Garcia Salas
	email = garciasalasalejandro@gmail.com
[github]
	user = alejandrogarciasalas
[init]
	defaultBranch = main
[push]
	default = current
[pull]
	ff = only
[fetch]
	prune = true
[diff]
	# histogram is a faster diffing algorithm
	algorithm = histogram
[rerere]
	enabled = true
[pager]
	# -R=raw control chars, -F=quit if one screen, -X=don't clear screen
	# pattern lets you jump between files with n/N
	diff = diff-so-fancy | less --tabs=1,5 -RFX --pattern '^(Date|added|deleted|modified): '
	show = diff-so-fancy | less --tabs=1,5 -RFX --pattern '^(Date|added|deleted|modified): '
[diff-so-fancy]
	stripLeadingSymbols = false
[color]
	ui = true
[color "diff"]
	old = red bold
	new = green bold
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
# created by git lfs install
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[include]
	path = ~/.dotfiles/git/gitalias.txt
	path = ~/.gitconfig_local
